div.row
	div.col-md-4
		form.well#blogs-form
			.form-group
				label Title
				input.form-control(name="title", type="text")
			.form-group
				label Date Created
				input.form-control(name="dateCreated", type="date")
			.form-group
				label Media
				input.form-control(name="image", type="text")
			.form-group
				label Summary text
				input.form-control(name="body", type="textarea")
			input(type="hidden", name="_id", value="")
			button.btn.btn-primary(type="submit") Save
			| &nbsp;
			button.btn.btn-danger.btn-reset Reset
	div.col-md-8
		each item in articles
			.post(data-id=item._id)
				.content
					.date= item.dateCreated
					h3.entry-title= item.title
					p= item.body
				.media
					img(src= "" + item.image, alt= item.title)
				.actions.clearfix
					a.btn.btn-danger.action-delete(data-id=item._id)
						i.fa.fa-trash-o.fa-2x
					| &nbsp;	
					a.btn.btn-primary.action-edit(data-id=item._id)
						i.fa.fa-pencil-square.fa-2x
					