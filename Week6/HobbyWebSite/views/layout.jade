//- layout.jade
doctype html
html
    head
        block title
            title Hobby WebSite
        link(href='http://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
        link(href='css/style.css', rel='stylesheet', type='text/css')
    body
        header#navbar.navbar-default.navbar-fixed-top
            div.container
                div.logo WebsiteLogo
                nav
                block headerNav
                    ul.nav.navbar-nav
                        li
                            a(href='#') Home
                        li
                            a(href='#') Link
                        li
                            a(href='#') Link

        block slider
            include  ./slider.jade
        block content
            div.main-container
            div.container

                img(src="img/one.png")
                p MainContainer text
        block footer
            footer.footer
            div.container
                div.col-md-4 footer content 1
                div.col-md-4 footer content 2
                div.col-md-4 footer content 3
        script(src='/js/jquery.min.js')
        script(src='/js/bootstrap.min.js')