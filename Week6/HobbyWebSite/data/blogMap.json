{
	"collections":{
		"articles":{
			"model": "Article",
			"schema":{
				"title": { "type": "String", "required": false, "minLength": 1, "maxLength": 5},
				"dateCreated": { "type": "Date", "default": "Date.now" },
				"image": "String",
				"body": "String"
			}
		}
	},
	"routes": {
		"api" : {
			"_meta": {
				"virtual": true,
				"crud": true,
				"contentType": "json"
			},
			"articles": {}
		}
	}

}